        }
    },

    "input": {
        "device"        : "hw:0,0",
        "silentFrames"  : 325,

        "format": {
            "bitDepth"  : "16"
        }
    },

    "stream": {
        "metadata": {
            "name"          : "Riverside Radio",
            "description"   : "Switch On SW London",
            "genre"         : "Community",
            "url"           : "http://www.riversideradio.com/"
        },

        "server": {
            "host"      : "localhost",
            "port"      : 8000,
            "user"      : "source",
            "password"  : "hackme",
            "mount"     : "stream"
